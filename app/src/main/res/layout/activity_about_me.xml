<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bob.com.example.root.blazeguide.AboutMe">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/left_margin_36"
        android:paddingRight="@dimen/md_keylines"
        android:paddingTop="80dp"
        android:weightSum="1"
        android:background="#560607">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Hey folks !! This guide is best for those who have been playing this game for 1-2 weeks and want to explore more :)"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Created By"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Abhishek Mittal(_STAR_merCY)"
            android:textColor="@color/metallicGold"/>
        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Build Calculator Formula Suggested By:"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Opor Thorleifsson(Thiefsel)"
            android:textColor="@color/metallicGold"/>
        <TextView
            android:id="@+id/textView411"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Stay Tuned for more updates\n If you have any query or suggestion email me"
            android:textColor="@color/white"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView411"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="starmercy19@gmail.com"
            android:textColor="@color/metallicGold"/>





    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>

        <item name="colorPrimary">#d6b042</item>
        <item name="android:textColor">#282f38</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#3949AB</item>
